{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "AllowedHosts": "*",
  "DataProtection": "temp-keys/",
  "ConnectionStrings": {
    "XzNodeDBContext": "Data Source=.;Initial Catalog=XzNodeDB;User=sa;Password=123456"
