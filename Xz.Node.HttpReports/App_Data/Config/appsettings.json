{
  "AppSetting": {
    "AppId": "Xz.Node.HttpReports",
    "HttpHost": "http://*:12797" //启动绑定地址及端口
  },
  "HttpReportsDashboard": {
    "ExpireDay": 3, //数据过期天数，默认3天，HttpReports 会自动清除过期的数据
